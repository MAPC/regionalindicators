<h3 class="<%= topic_area_slug %> <%= subject_slug %>" id="<%= indicator.slug %>"><%= indicator.title %></h3>

<button type="button" class="col-xs-12 col-sm-4 alert <%= alert_class(indicator, :passing) %> <%= indicator.slug %> value">
  Value:<br/>
  <%= thumb_class(indicator, :passing) %> <%= indicator.value %> <%= indicator.units %>
</button>

<button type="button" class="col-xs-12 col-sm-4 alert <%= alert_class(indicator, :trend) %> <%= indicator.slug %> delta">
  Change since 2000:<br/>
  <%= chevron_class(indicator, :incr_decr) %> <%= indicator.value_delta %> <%= indicator.units %>
</button>

<% if indicator.rank? %>
  <button type="button" class="col-xs-12 col-sm-4 alert <%= alert_class(indicator, :rank_trend) %> <%= indicator.slug %> rank">
    Rank:<br/>
    <%= chevron_class(indicator, :rank_incr_decr) %> <%= indicator.rank %>
  </button>
<% end %>

<% if indicator.explanation %>
  <%= render partial: 'explanation', locals: { explanation: indicator.explanation } %>
<% end %>