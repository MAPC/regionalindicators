<%= explanation.narrative_html %>

<%= render partial: 'visualizations/visualization', 
           collection: explanation.visualizations  %>

<% if explanation.has_sources? %>

  <div class="panel panel-default">
    <a data-toggle="collapse" data-parent="#accordion" href="#sources-for-<%= explanation.id %>">
      <div class="panel-heading">
        <h4 class="panel-title">
          Sources
        </h4>
      </div>
    </a>
    <div id="sources-for-<%= explanation.id %>" class="panel-collapse collapse">
      <div class="panel-body">
        <%= render partial: 'source', collection: explanation.sources %>
      </div>
    </div>
  </div>

<% end %>