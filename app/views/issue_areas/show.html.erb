<h1 class='page-header'>
  <%= link_to issue_area_path(@issue_area) do %>
    <div class="<%= @issue_area.css_class %> issue-area-circle">
    </div>
  <% end %>
  <%= @issue_area.title %>
</h1>

<div class="col-md-3 col-sm-2 myscrollspy">
  <div class="bs-sidebar hidden-print affix">
    <ul class="nav bs-sidenav">
      <%= render partial: 'scrollspy/indicator', collection: @issue_area.indicators %>
    </ul>
  </div>
</div>

<div class="col-md-9 col-md-offset-3">
  <% if @issue_area.has_indicators? %>
    <%= render partial: 'issue_areas/indicator', collection: @issue_area.indicators %>
  <% else %>
    <p>
      There are presently no indicators related to <%= @issue_area.title %>.
    </p>
  <% end %>

  <p>
    View <%= @issue_area.title.downcase %> maps and download related datasets at the
    <%= link_to 'MetroBoston DataCommon', @issue_area.datacommon_url, target: '_blank' %>.
  </p>
</div>
